<Window x:Class="Proyecto1_TBDII.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto1_TBDII"
        mc:Ignorable="d"
        Title="Login" Height="247" Width="187">
    <Grid>
        <TextBox x:Name="tbUsuario" HorizontalAlignment="Center" Margin="0,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Center" Margin="0,127,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btLogin" Content="Login" HorizontalAlignment="Center" Margin="0,182,0,0" VerticalAlignment="Top" Click="btLogin_Click"/>
        <Label Content="Usuario" HorizontalAlignment="Left" Margin="34,40,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="34,0,0,0" VerticalAlignment="Center"/>

    </Grid>
</Window>
